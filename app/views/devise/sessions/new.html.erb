<section class="section">
  <div class="container layout-session">
    <h1 class="mb">Sign in to your account</h1>
    <div class="style-session">
      <h4 class="layout-center-text mb">CONTINUE WITH</h4>
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <div data-turbo="false">
            <%= form_with(url: omniauth_authorize_path(resource_name, provider), method: :post) do |form| %>
              <%= form.submit "#{OmniAuth::Utils.camelize(provider)}", class:"btn btn-secondary size-btn mb" %>
            <% end %>
          </div>
        <% end %>
      <% end %>
      <h4 class="layout-center-text mb">OR</h4>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mb">
          <%= f.label :email %><br />
          <%= f.email_field :email,placeholder: "example@mail.com", autofocus: true, autocomplete: "email",class: "input" %>
        </div>
        <div class="field mb">
          <%= f.label :password %><br />
          <%= f.password_field :password,placeholder: "********", autocomplete: "current-password",class: "input" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field mb">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="actions mb">
          <%= f.submit "Log in", class:"btn btn-primary size-btn" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
